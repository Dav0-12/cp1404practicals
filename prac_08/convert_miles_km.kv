BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_text
            text: ''
            font_size: 30
            on_text: app.handle_conversion(input_text.text)
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(input_text.text, 1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(input_text.text, -1)
    #Button:
    #    text: 'Convert miles to km'
    #    on_press: app.handle_conversion(input_text.text)
    Label:
        text: app.message
        font_size: 30
        color: (1,1,0,1)
